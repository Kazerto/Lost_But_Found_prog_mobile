<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    android:padding="16dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="16dp">

<!-- Bouton pour choisir une image -->
<Button
    android:id="@+id/selectImageButton"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Choisir une image"
    android:textColor="#FFFFFF"
    android:backgroundTint="#4CAF50"
android:layout_marginTop="16dp"
android:elevation="4dp"/>

<!-- Preview de l'image avec bordure arrondie -->
<ImageView
    android:id="@+id/imagePreview"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="16dp"
    android:visibility="gone"
    android:background="@drawable/rounded_background"
android:elevation="4dp"/>

<!-- Champ de texte pour le titre -->
<EditText
    android:id="@+id/titleInput"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="24dp"
    android:hint="Titre de l'objet"
    android:inputType="text"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:textColor="#2C3E50"
    android:textColorHint="#A5A5A5"
    android:background="@drawable/edittext_background"/>

<!-- Champ de texte pour la description -->
    <EditText
        android:id="@+id/descriptionInput"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:hint="Description de l'objet"
        android:inputType="text"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:textColor="#2C3E50"
    android:textColorHint="#A5A5A5"
    android:background="@drawable/edittext_background"/>

<!-- Champ de texte pour la ville -->
<EditText
    android:id="@+id/villeInput"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="16dp"
    android:hint="Ville"
    android:inputType="text"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:textColor="#2C3E50"
    android:textColorHint="#A5A5A5"
    android:background="@drawable/edittext_background"/>

<!-- Champ de texte pour la latitude -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="16dp">

    <ImageView
        android:src="@drawable/ic_location"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:id="@+id/latitudeInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:hint="Latitude (ex: 48.8566)"
        android:inputType="numberDecimal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#2C3E50"
        android:textColorHint="#A5A5A5"
        android:background="@drawable/edittext_background"/>

</LinearLayout>

<!-- Champ de texte pour la longitude -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="16dp">

    <ImageView
        android:src="@drawable/ic_location"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:id="@+id/longitudeInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:hint="Longitude (ex: 2.3522)"
        android:inputType="numberDecimal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#2C3E50"
        android:textColorHint="#A5A5A5"
        android:background="@drawable/edittext_background"/>

</LinearLayout>

<!-- Bouton pour signaler l'objet perdu -->
<Button
    android:id="@+id/reportButton"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Signaler l'objet"
    android:textColor="#FFFFFF"
    android:backgroundTint="#4CAF50"
    android:textStyle="bold"
    android:layout_marginTop="24dp"
    android:elevation="4dp"/>

</LinearLayout>
    </ScrollView>
