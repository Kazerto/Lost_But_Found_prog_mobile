<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <!-- Catégorie -->
    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textColor="#777777"
        android:textSize="14sp" />

    <!-- Titre de l'objet perdu -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proactive"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp" />

    <!-- Utilisateur ayant signalé l'objet -->
    <TextView
        android:id="@+id/tvReportedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reported by: lionnel@gmail.com"
        android:textColor="#777777"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <!-- Bouton de statut (disponible ou non) -->
    <Button
        android:id="@+id/btnStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNAVAILABLE"
        android:backgroundTint="#3AA56B"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_marginTop="8dp" />
</LinearLayout>
