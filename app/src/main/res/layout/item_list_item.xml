<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <!-- LinearLayout pour les textes (à gauche) -->
    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <!-- Catégorie -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textColor="#777777"
            android:textSize="14sp" />

        <!-- Titre de l'objet perdu -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Proactive"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Utilisateur ayant signalé l'objet -->
        <TextView
            android:id="@+id/tvReportedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Reported by: lionnel@gmail.com"
            android:textColor="#777777"
            android:textSize="14sp" />

        <!-- Bouton de statut (disponible ou non) -->
        <Button
            android:id="@+id/btnStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#3AA56B"
            android:text="UNAVAILABLE"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- LinearLayout pour l'ImageView (à droite) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:contentDescription="@string/icon_description"
            android:scaleType="centerInside" />
    </LinearLayout>
</LinearLayout>
